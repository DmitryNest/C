#include <stdio.h>
int main()
{
  int *a,*b,*c; 
  int  n,i;
  printf("Введите размер памяти: ");
  scanf("%d", &n);
  // Выделение памяти
  a = (int*)malloc(n * sizeof(int));
  b = (int*)malloc(n * sizeof(int));
  c = (int*)malloc(n * sizeof(int));

    printf("введите первый вектор :");
    scanf("%d,%d",&a[0],&a[1]);
    printf("введите второй вектор :");
    scanf("%d,%d",&b[0],&b[1]);
    
    printf("Что считаем:\n 1.сумма векторов команда[0]\n 2.разность векторов команда[1]\n 3.скалярное произведение команда[2]\n Введите команду:"); 
    scanf("%d",&i);
    switch(i){
        case 0:
        c[0]=a[0]+b[0];
        c[1]=a[1]+b[1];
         printf("сумма={%d;%d}",c[0],c[1]);
         break;
         //case 1:
         //vx[6]=x1[0]-x2[3];
         //vy[7]=y1[1]-y2[4];
         //printf("вычетание={%d;%d}",vx[6],vy[7]);
         //break;
         //case 2:
         //sk[8]=(x1[0]*x2[3])+(y1[1]*y2[4]);
         //printf("скалярное произведение=%d;\n",sk[8]);
         //break;
        default:
        printf("Команда введена не верно!");
    }
    return 0;
}
